@model InventoryManagementApp.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(Model.ProductId == 0 ? "Add Product" : "Edit Product")</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-form-container {
            max-width: 600px;
            margin: auto;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

            .product-form-container img {
                max-width: 100%;
                height: auto;
            }

        .form-group label {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="product-form-container">
            <h2 class="mb-4 text-center">@((Model.ProductId == 0 ? "Add Product" : "Edit Product"))</h2>
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" name="ProductId" value="@Model.ProductId" />

                @if (Model.ProductId != 0 && Model.ProductImage != null && Model.ProductImage.Length > 0)
                {
                    <div class="form-group">
                        <label>Current Product Image</label>
                        <div>
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.ProductImage)" alt="Product Image" class="img-thumbnail" />
                        </div>
                    </div>
                }

                <div class="form-group">
                    <label for="ProductName">Product Name</label>
                    <input type="text" id="ProductName" name="ProductName" value="@Model.ProductName" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="Price">Price</label>
                    <input type="text" id="Price" name="Price" value="@Model.Price" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="imageFile">Product Image</label>
                    <input type="file" id="imageFile" name="imageFile" class="form-control-file" />
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="@Url.Action("ProductList", "Product")" class="btn btn-secondary ml-2">Exit</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
